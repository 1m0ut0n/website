---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  rel?: string;
}

const { href, external, underline = true, rel, ...rest } = Astro.props;
---

<a
  href={href}
  rel={rel}
  target={ external ? "_blank" : "_self" }
  class={cn("inline-block decoration-black/15 dark:decoration-white/30 hover:decoration-black/25 hover:dark:decoration-white/50 text-current hover:text-black hover:dark:text-white transition-colors duration-200 ease-in-out", underline && "underline decoration-2 underline-offset-2")}
  {...rest}>
  <slot/>
</a>
